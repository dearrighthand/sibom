// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
}

enum Role {
  USER
  ADMIN
}

enum MatchStatus {
  PENDING
  ACCEPTED
  REJECTED
  CANCELLED
}

enum MessageType {
  TEXT
  IMAGE
  VOICE
}

model User {
  id        String   @id @default(uuid())
  email     String?  @unique
  password  String?
  phone     String   @unique
  kakaoId   String?  @unique
  deviceToken String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile Profile?

  sentMatches     Match[] @relation("Sender")
  receivedMatches Match[] @relation("Receiver")

  sentMessages     Message[] @relation("Sender")
  receivedMessages Message[] @relation("Receiver")

  blockedUsers    Block[] @relation("Blocker")
  blockedBy       Block[] @relation("Blocked")
  reportsSent     Report[] @relation("Reporter")
  reportsReceived Report[] @relation("Reported")

  subscription Subscription?
  inquiries    Inquiry[]

  sentProposals     MeetingProposal[] @relation("ProposalSender")
  receivedProposals MeetingProposal[] @relation("ProposalReceiver")
  meetingProposals  MeetingProposal[]

  notifications     Notification[]
  setting           Setting?
}

model Setting {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Notifications
  notifyLike      Boolean @default(true)
  notifyMessage   Boolean @default(true)
  notifyMarketing Boolean @default(false)

  // Display
  fontSize        Int    @default(2) // 1: Small, 2: Medium, 3: Large, 4: XL
  brightnessMode  String @default("auto") // "auto", "manual"

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Profile {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  name        String
  birthYear   Int
  gender      Gender
  location    String
  bio         String? @db.Text
  meetingType String?

  // AI Attributes
  interests String[] // e.g. ["HIKING", "READING"]
  embedding Float[] // for pgvector (supported by Prisma via Unsupported or specific types)

  images String[]

  isPremium Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Match {
  id String @id @default(uuid())

  senderId String
  sender   User   @relation("Sender", fields: [senderId], references: [id])

  receiverId String
  receiver   User   @relation("Receiver", fields: [receiverId], references: [id])

  status MatchStatus @default(PENDING)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]

  @@unique([senderId, receiverId])
}

model Message {
  id String @id @default(uuid())

  matchId String
  match   Match  @relation(fields: [matchId], references: [id])

  senderId String
  sender   User   @relation("Sender", fields: [senderId], references: [id])

  receiverId String
  receiver   User   @relation("Receiver", fields: [receiverId], references: [id])

  content  String      @db.Text
  type     MessageType @default(TEXT)
  metadata Json? // For AI recommendations or voice transcription

  readAt    DateTime?
  createdAt DateTime  @default(now())
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
}

enum ProposalStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum InquiryStatus {
  PENDING
  ANSWERED
}

enum PhoneVerificationStatus {
  PENDING
  VERIFIED
  EXPIRED
}

model Subscription {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  planType  String // e.g., "PREMIUM_MONTHLY"
  startDate DateTime
  endDate   DateTime
  status    SubscriptionStatus @default(ACTIVE)

  paymentLog Json? // Details from payment provider

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MeetingProposal {
  id String @id @default(uuid())

  senderId String
  sender   User   @relation("ProposalSender", fields: [senderId], references: [id])

  receiverId String
  receiver   User   @relation("ProposalReceiver", fields: [receiverId], references: [id])

  location String
  dateTime DateTime
  message  String?
  status   ProposalStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model FAQ {
  id        String  @id @default(uuid())
  category  String
  question  String
  answer    String  @db.Text
  isVisible Boolean @default(true)
  order     Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Inquiry {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  category String
  title    String
  content  String @db.Text

  answer String?       @db.Text
  status InquiryStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PhoneVerification {
  id String @id @default(uuid())

  phone  String // 인증할 휴대폰 번호
  code   String // 6자리 인증 코드
  status PhoneVerificationStatus @default(PENDING)

  attempts Int @default(0) // 인증 시도 횟수

  expiresAt  DateTime // 만료 시간 (3분)
  verifiedAt DateTime? // 인증 완료 시간

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([phone, status]) // 휴대폰 번호로 조회 최적화
  @@index([expiresAt]) // 만료된 레코드 정리용
}

enum NotificationType {
  MATCH
  MESSAGE
  SYSTEM
}

model Notification {
  id        String           @id @default(uuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id])
  
  type      NotificationType
  content   String
  metadata  Json?            // e.g. { senderId: "..." }
  isRead    Boolean          @default(false)

  createdAt DateTime         @default(now())
}

model DailyRecommendation {
  id        String   @id @default(uuid())
  userId    String
  date      String   // YYYY-MM-DD
  
  recommendedIds String[] // IDs of profiles shown today
  metadata       Json?    // AI-generated match reasons: { [userId]: reasonText }
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([userId, date])
}

model Block {
  id        String   @id @default(uuid())
  blockerId String
  blocker   User     @relation("Blocker", fields: [blockerId], references: [id])
  blockedId String
  blocked   User     @relation("Blocked", fields: [blockedId], references: [id])
  createdAt DateTime @default(now())

  @@unique([blockerId, blockedId])
}

model Report {
  id         String   @id @default(uuid())
  reporterId String
  reporter   User     @relation("Reporter", fields: [reporterId], references: [id])
  targetId   String
  target     User     @relation("Reported", fields: [targetId], references: [id])
  reason     String   @db.Text
  status     String   @default("PENDING") // PENDING, RESOLVED
  createdAt  DateTime @default(now())
}

model SmsLog {
  id        String   @id @default(uuid())
  to        String
  from      String
  content   String   @db.Text
  status    String   // SUCCESS, FAILURE
  messageId String?
  resultCode String?
  createdAt DateTime @default(now())

  @@index([to, createdAt])
}
