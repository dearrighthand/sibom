// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Gender {
  MALE
  FEMALE
}

enum Role {
  USER
  ADMIN
}

enum MatchStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum MessageType {
  TEXT
  IMAGE
  VOICE
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  phone     String?  @unique
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile Profile?

  sentMatches     Match[] @relation("Sender")
  receivedMatches Match[] @relation("Receiver")

  sentMessages     Message[] @relation("Sender")
  receivedMessages Message[] @relation("Receiver")

  subscription Subscription?
  inquiries    Inquiry[]

  sentProposals     MeetingProposal[] @relation("ProposalSender")
  receivedProposals MeetingProposal[] @relation("ProposalReceiver")
  meetingProposals  MeetingProposal[]
}

model Profile {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  name      String
  birthYear Int
  gender    Gender
  location  String
  bio       String? @db.Text

  // AI Attributes
  interests String[] // e.g. ["HIKING", "READING"]
  embedding Float[] // for pgvector (supported by Prisma via Unsupported or specific types)

  images String[]

  isPremium Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Match {
  id String @id @default(uuid())

  senderId String
  sender   User   @relation("Sender", fields: [senderId], references: [id])

  receiverId String
  receiver   User   @relation("Receiver", fields: [receiverId], references: [id])

  status MatchStatus @default(PENDING)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]

  @@unique([senderId, receiverId])
}

model Message {
  id String @id @default(uuid())

  matchId String
  match   Match  @relation(fields: [matchId], references: [id])

  senderId String
  sender   User   @relation("Sender", fields: [senderId], references: [id])

  receiverId String
  receiver   User   @relation("Receiver", fields: [receiverId], references: [id])

  content  String      @db.Text
  type     MessageType @default(TEXT)
  metadata Json? // For AI recommendations or voice transcription

  readAt    DateTime?
  createdAt DateTime  @default(now())
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
}

enum ProposalStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum InquiryStatus {
  PENDING
  ANSWERED
}

model Subscription {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  planType  String // e.g., "PREMIUM_MONTHLY"
  startDate DateTime
  endDate   DateTime
  status    SubscriptionStatus @default(ACTIVE)

  paymentLog Json? // Details from payment provider

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MeetingProposal {
  id String @id @default(uuid())

  senderId String
  sender   User   @relation("ProposalSender", fields: [senderId], references: [id])

  receiverId String
  receiver   User   @relation("ProposalReceiver", fields: [receiverId], references: [id])

  location String
  dateTime DateTime
  message  String?
  status   ProposalStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model FAQ {
  id        String  @id @default(uuid())
  category  String
  question  String
  answer    String  @db.Text
  isVisible Boolean @default(true)
  order     Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Inquiry {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  category String
  title    String
  content  String @db.Text

  answer String?       @db.Text
  status InquiryStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
